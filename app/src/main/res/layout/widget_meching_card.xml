<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEDED"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="79dp"
        android:background="@android:color/white"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/chatlist_main_imageview"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="4dp"
            android:background="@color/lightblue_500"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="86dp"
            android:layout_marginRight="100dp"
            android:orientation="vertical"
            android:weightSum="2" >

            <TextView
                android:id="@+id/chatlist_nickname_textview"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="닉네임"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/chatlist_text_textview"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:maxLines="2"
                android:text="나의 한마디 막그래서 어머머어저나나asdasdasdasdasdasdasda"
                android:textColor="#606060"
                android:textSize="12sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/chatlist_time_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="오후 3:00"
                android:textColor="#606060"
                android:textSize="8sp" />

            <ImageView
                android:id="@+id/chatlist_check_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/chatlist_time_textview"
                android:layout_marginTop="16dp" />

        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EDEDED" >
    </LinearLayout>

</LinearLayout>