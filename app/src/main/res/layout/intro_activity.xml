<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightblue_500"
    tools:context="com.larvafly.campuscarpul.MainActivity" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="LAON"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/login_logo_iv"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/logo_w" />

        <ImageView
            android:id="@+id/login_logotext_iv"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="42dp"
            android:src="@drawable/intro_logo_text" />
    </LinearLayout>

</RelativeLayout>