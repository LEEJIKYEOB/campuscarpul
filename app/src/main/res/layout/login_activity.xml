<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="com.larvafly.campuscarpul.MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="390dp"
        android:background="@color/lightblue_500"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/login_logo_iv"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="64dp"
            android:src="@drawable/logo_w" />

        <ImageView
            android:id="@+id/login_logotext_iv"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginBottom="42dp"
            android:src="@drawable/logo_text" />

        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/login_join_btn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:text="회원가입"
            android:textColor="@color/lightblue_500" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#dfdfdf" >
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/login_id_et"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:hint="이메일"
            android:inputType="textWebEmailAddress"
            app:met_primaryColor="@color/lightblue_500"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/login_pw_et"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/login_id_et"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:ems="10"
            android:hint="비밀번호"
            android:inputType="textPassword"
            app:met_primaryColor="@color/lightblue_500"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal"
            android:weightSum="2" >

            <com.gc.materialdesign.views.ButtonFlat
                android:id="@+id/login_src_tv"
                android:layout_width="0px"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="아이디/비밀번호 찾기"
                android:textColor="@color/lightblue_500"/>

            <com.gc.materialdesign.views.ButtonRectangle
                android:id="@+id/login_login_btn"
                android:layout_width="0px"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@color/lightblue_500"
                android:text="로그인"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>